<form class="m-5" action="/restaurants" method="POST">
  <div class="ml-5">
    <label for="name">餐廳名稱</label>
    <input class="ml-2" name="name" id="name" type="text" placeholder="請輸入餐廳中文名稱" required>
    <label class="ml-5" for="name_en">英文名稱</label>
    <input class="ml-2" name="name_en" id="name_en" type="text" placeholder="請輸入餐廳英文名稱" required>
    <label class="ml-5" for="category">餐廳類別</label>
    <input class="ml-2" name="category" id="category" type="text" placeholder="請輸入餐廳類別" required>
  </div>
  <div class="ml-5 mt-4">
    <label for="image">餐廳圖片</label>
    <input class="ml-2" name="image" id="image" type="text" placeholder="請輸入超連結" required>
    <label class="ml-5" for="location">餐廳地址</label>
    <input class="ml-2" name="location" id="location" type="text" placeholder="請輸入餐廳地址" required>
    <label class="ml-5" for="phone">餐廳電話</label>
    <input class="ml-2" name="phone" id="phone" type="text" placeholder="請輸入餐廳電話" required>
  </div>
  <div class="ml-5 mt-4">
    <label for="google_map">Google Map</label>
    <input class="ml-2" name="google_map" id="google_map" type="text" placeholder="請輸入超連結" required>
    <label class="ml-4" for="rating">餐廳評分</label>
    <input class="ml-2" name="rating" id="rating" type="text" placeholder="請評價 1-5 顆星" required>
    <label class="ml-5" for="description">餐廳敘述</label>
    <input class="ml-2" name="description" id="description" type="text" placeholder="請填寫 50-100 字描述" required>
  </div>
  <div class="ml-5 mt-4">
    <button class="btn btn-danger btn-sm" type="submit">Create</button>
  </div>
</form>